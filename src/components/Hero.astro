---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;
---

<section class="min-h-screen flex flex-col justify-start items-center text-center pt-10" id="#hero">
  <!-- Hero Content -->
  <div>
    <h1 class="mb-1 font-serif text-6xl font-bold tracking-tightest text-white sm:text-7xl md:mb-0 md:text-8xl">

      {name}
    </h1>
    <p class="mb-9 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl">
      {specialty}
    </p>
    <p class="mb-16 text-base font-normal text-neutral md:text-lg">
      {summary}
    </p>
  </div>

  <!-- 2-Column Block Section -->
  <div class="flex flex-col md:flex-row gap-6 w-full max-w-4xl px-4 -mt-5">

    <!-- LeetCode Box -->
    <a 
      href="https://leetcode.com/u/Lucifer71/" 
      target="_blank" 
      rel="noopener noreferrer" 
      class="flex-1 bg-gradient-to-br from-blue-500 to-indigo-700 hover:scale-105 transition-transform duration-300 text-white p-6 rounded-2xl shadow-xl"
    >
      <h3 class="text-2xl font-bold mb-2">LeetCode</h3>
      <p class="text-base">Check out my solved problems and coding progress!</p>
    </a>

    <!-- Strava Box -->
    <a 
      href="https://www.strava.com/athletes/170749275" 
      target="_blank" 
      rel="noopener noreferrer" 
      class="flex-1 bg-gradient-to-br from-sky-600 to-blue-900 hover:scale-105 transition-transform duration-300 text-white p-6 rounded-2xl shadow-xl"
    >
      <h3 class="text-2xl font-bold mb-2">Strava</h3>
      <p class="text-base">Track my runs, rides, and weekly training stats!</p>
    </a>
  </div>
</section>
